origname=jemalloc
pkgname=zjemalloc
pkgver=5.1.0    # update this
pkgrel=1
pkgdesc='General-purpose scalable concurrent malloc implementation'
arch=('x86_64')
license=('BSD')
url='http://www.canonware.com/jemalloc/'
depends=('glibc')
provides=('libjemallocz.so')
optdepends=('perl: for jeprof')
source=("https://github.com/jemalloc/jemalloc/releases/download/${pkgver}/${origname}-${pkgver}.tar.bz2")
sha256sums=('SKIP')

build() {
  cd $origname-$pkgver

  ./configure \
    --enable-autogen \
    --prefix=/usr \
    --with-jemalloc-prefix=z \
    --with-install-suffix=z \
    --disable-cxx \
    #
  make build_lib_shared
}

package() {
  cd $origname-$pkgver

  make DESTDIR="$pkgdir" install_include install_lib_shared
}
